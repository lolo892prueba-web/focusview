[Unit]
Description=FocusView Gunicorn Service
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/focusview
EnvironmentFile=/var/www/focusview/.env
ExecStart=/var/www/focusview/venv/bin/gunicorn app:app -b 127.0.0.1:8000 --workers 3
Restart=on-failure

[Install]
WantedBy=multi-user.target
